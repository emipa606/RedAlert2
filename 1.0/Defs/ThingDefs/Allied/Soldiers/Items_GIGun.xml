<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>ra2_Bullet_GI</defName>
    <label>GI bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>4</damageAmountBase>
      <speed>80</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseGun">
    <defName>ra2_Gun_GI</defName>
    <label>GI gun</label>
    <graphicData>
      <texPath>ra2/Things/Weapon/Allied/Soldier/GIGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <menuHidden>true</menuHidden>
    <description>GI's gun.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <SellPriceFactor>0.01</SellPriceFactor>
      <MaxHitPoints>188</MaxHitPoints>
      <MarketValue>150</MarketValue>
      <Mass>0.6</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <weaponTags>
      <li>ra2_Gun_GI</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ra2_Bullet_GI</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>20</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>3</burstShotCount>
        <soundCast>ra2_GI_shot</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="HatBase">
    <defName>ra2_Hat_GI</defName>
    <label>GI hat</label>
    <description>GI's hat.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Tuque/Tuque</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>2200</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Tuque/Tuque</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>ra2_Hat_GI</li>
      </tags>
      <defaultOutfitTags>
        <li>GI</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(1.0,0.89,0.70,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
