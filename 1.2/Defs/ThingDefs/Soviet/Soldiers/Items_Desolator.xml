<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>ra2_Bullet_Desolator</defName>
    <label>desolator fire</label>
    <thingClass>ra2.Projectile_Desolator</thingClass>
    <graphicData>
      <texPath>ra2/Projectile/Bullet_Desolator</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <speed>200</speed>
      <damageDef>DesolatorGun</damageDef>
      <damageAmountBase>0</damageAmountBase>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_Gun_Desolator</defName>
    <label>desolator gun</label>
    <graphicData>
      <texPath>ra2/Things/Weapon/Soviet/Soldier/DesolatorGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <menuHidden>true</menuHidden>
    <description>Desolator's gun.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <Flammability>0</Flammability>
      <MarketValue>150</MarketValue>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>0.95</AccuracyShort>
      <AccuracyMedium>0.85</AccuracyMedium>
      <AccuracyLong>0.75</AccuracyLong>
      <RangedWeapon_Cooldown>0.2</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>10.0</ShootingAccuracyPawn>
      <MoveSpeed>-1</MoveSpeed>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>
    <weaponTags>
      <li>ra2_Gun_Desolator</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ra2_Bullet_Desolator</defaultProjectile>
        <warmupTime>1</warmupTime>
        <range>18</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>ra2_desolator_shot</soundCast>
        <soundCastTail>ra2_nothing</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="HatMakeableBase">
