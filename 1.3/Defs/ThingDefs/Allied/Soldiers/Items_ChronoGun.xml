<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef>
    <defName>ChronoBeam</defName>
    <thingClass>ra2.ChronoBeam</thingClass>
    <drawOffscreen>true</drawOffscreen>
    <label>chrono beam</label>
    <category>Projectile</category>
    <tickerType>Normal</tickerType>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <useHitPoints>False</useHitPoints>
    <neverMultiSelect>True</neverMultiSelect>
  </ThingDef>
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_Gun_Chrono</defName>
    <label>Chrono gun</label>
    <graphicData>
      <texPath>ra2/Things/Weapon/Allied/Soldier/ChronoGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Chrono's gun.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <tradeability>None</tradeability>
    <destroyOnDrop>true</destroyOnDrop>
    <equippedStatOffsets>
      <ShootingAccuracyTurret>10.0</ShootingAccuracyTurret>
      <MoveSpeed>-0.8</MoveSpeed>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>
    <statBases>
      <Flammability>0</Flammability>
      <MarketValue>150</MarketValue>
      <Mass>1</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>0.9</AccuracyShort>
      <AccuracyMedium>0.8</AccuracyMedium>
      <AccuracyLong>0.7</AccuracyLong>
      <RangedWeapon_Cooldown>3</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <weaponTags>
      <li>ra2_Gun_Chrono</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>ra2.Verb_Chrono</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>0.1</warmupTime>
        <range>28</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>ra2_Chrono_shot</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>4</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="HatBase">
    <defName>ra2_Hat_Chrono</defName>
    <label>Chrono hat</label>
    <description>Chrono's hat.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PowerArmorHelmet/PowerArmorHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <WorkToMake>2200</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
    </statBases>
    <generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PowerArmorHelmet/PowerArmorHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>ra2_Hat_Chrono</li>
      </tags>
      <defaultOutfitTags>
        <li>Chrono</li>
      </defaultOutfitTags>
    </apparel>
    <comps>
      <li>
        <compClass>ra2.Comp_RemovingGun</compClass>
      </li>
    </comps>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="Ra2ClothBase">
    <defName>ra2_Parka_Chrono</defName>
    <label>Chrono parka</label>
    <description>A thick parka for staying warm in even the coldest of temperatures.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <statBases>
      <WorkToMake>170000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>15</Mass>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.65</ArmorRating_Sharp>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>ra2_Parka_Chrono</li>
      </tags>
      <defaultOutfitTags>
        <li>Chrono</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="Ra2ClothBase">
    <defName>ra2_Pants_Chrono</defName>
    <label>Chrono pants</label>
    <description>A simple set of pants.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Pants/Pants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>8500</WorkToMake>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>ra2_Pants_Chrono</li>
      </tags>
      <defaultOutfitTags>
        <li>Chrono</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(0.66,0.33,0.33,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>