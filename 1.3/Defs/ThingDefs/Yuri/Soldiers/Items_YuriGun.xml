<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_Gun_Yuri</defName>
    <label>Yuri Control</label>
    <graphicData>
      <texPath>ra2/Things/Weapon/Yuri/Soldier/YuriGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Yuri's control.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <Flammability>0</Flammability>
      <MarketValue>150</MarketValue>
      <Mass>1</Mass>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>1.00</AccuracyShort>
      <AccuracyMedium>1.00</AccuracyMedium>
      <AccuracyLong>1.00</AccuracyLong>
      <RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-2</MoveSpeed>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>
    <weaponTags>
      <li>ra2_Gun_Yuri</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>ra2.Yuri.Verb_Yuri</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>0.1</warmupTime>
        <range>15</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>ra2_yuri_shot</soundCast>
        <muzzleFlashScale>9</muzzleFlashScale>
        <requireLineOfSight>false</requireLineOfSight>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
