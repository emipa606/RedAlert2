<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_Gun_Brute</defName>
    <label>Brute gun</label>
    <graphicData>
      <texPath>ra2/Things/Weapon/Yuri/Soldier/BruteGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Brute's gun.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <SellPriceFactor>0.01</SellPriceFactor>
      <MaxHitPoints>188</MaxHitPoints>
      <MarketValue>150</MarketValue>
      <Mass>0.6</Mass>
      <AccuracyTouch>0.80</AccuracyTouch>
      <AccuracyShort>0.64</AccuracyShort>
      <AccuracyMedium>0.41</AccuracyMedium>
      <AccuracyLong>0.22</AccuracyLong>
      <RangedWeapon_Cooldown>0.66</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <weaponTags>
      <li>ra2_Gun_Brute</li>
    </weaponTags>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>30</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="Ra2ClothBase">
    <defName>ra2_Pants_Brute</defName>
    <label>Brute pants</label>
    <description>A simple set of pants.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Pants/Pants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>8500</WorkToMake>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>3</Insulation_Cold>
    </statBases>
    <smeltable>false</smeltable>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>ra2_Pants_Brute</li>
      </tags>
      <defaultOutfitTags>
        <li>Brute</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(0.74,0.6,0.41,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>
