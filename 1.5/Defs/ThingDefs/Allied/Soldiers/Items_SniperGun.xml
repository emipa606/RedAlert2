<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>ra2_Bullet_Sniper</defName>
    <label>Sniper fire</label>
    <thingClass>ra2.Projectile_Sniper</thingClass>
    <graphicData>
      <texPath>ra2/Building/ra2_tesla_top</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <speed>200</speed>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>3</damageAmountBase>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_Gun_Sniper</defName>
    <label>Sniper gun</label>
    <graphicData>
      <texPath>Things/Item/Equipment/WeaponRanged/SniperRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <description>Sniper's gun.</description>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <Flammability>0</Flammability>
      <MarketValue>150</MarketValue>
      <Mass>1</Mass>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>1.00</AccuracyShort>
      <AccuracyMedium>1.00</AccuracyMedium>
      <AccuracyLong>1.00</AccuracyLong>
      <RangedWeapon_Cooldown>0.2</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>10.0</ShootingAccuracyPawn>
      <MoveSpeed>-1</MoveSpeed>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>
    <weaponTags>
      <li>ra2_Gun_Sniper</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ra2_Bullet_Sniper</defaultProjectile>
        <warmupTime>3</warmupTime>
        <range>45</range>
        <ticksBetweenBurstShots>8</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <soundCast>ra2_Sniper_shot</soundCast>
        <soundCastTail>ra2_nothing</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>8</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="HatBase">
    <defName>ra2_Hat_Sniper</defName>
    <label>Sniper hat</label>
    <description>Sniper's hat.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PowerArmorHelmet/PowerArmorHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <Mass>0.07</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>2</Insulation_Heat>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/Tuque/Tuque</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>ra2_Hat_Sniper</li>
      </tags>
      <defaultOutfitTags>
        <li>Sniper</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(0.66,0.33,0.33,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="Ra2ClothBase">
    <defName>ra2_Parka_Sniper</defName>
    <label>Sniper parka</label>
    <description>A thick parka for staying warm in even the coldest of temperatures.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>15</Mass>
      <ArmorRating_Blunt>0.35</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.65</ArmorRating_Sharp>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.05</MoveSpeed>
      <WorkSpeedGlobal>-0.20</WorkSpeedGlobal>
    </equippedStatOffsets>
    <smeltable>false</smeltable>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>ra2_Parka_Sniper</li>
      </tags>
      <defaultOutfitTags>
        <li>Sniper</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(0.15,0.43,0.64,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
  <ThingDef ParentName="Ra2ClothBase">
    <defName>ra2_Pants_Sniper</defName>
    <label>Sniper pants</label>
    <description>A simple set of pants.</description>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/Pants/Pants</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <statBases>
      <WorkToMake>7000</WorkToMake>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.5</Mass>
      <ArmorRating_Blunt>0.03</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
    </statBases>
    <smeltable>false</smeltable>
    <apparel>
      <bodyPartGroups>
        <li>Legs</li>
      </bodyPartGroups>
      <layers>
        <li>OnSkin</li>
      </layers>
      <tags>
        <li>ra2_Pants_Sniper</li>
      </tags>
      <defaultOutfitTags>
        <li>Sniper</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <only>RGBA(0.66,0.33,0.33,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>