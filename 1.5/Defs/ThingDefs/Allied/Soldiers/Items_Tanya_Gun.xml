<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseBullet">
    <defName>ra2_Bullet_Tanya</defName>
    <label>tanya laser</label>
    <thingClass>ra2.Projectile_Tanya</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <speed>200</speed>
      <damageDef>TanyaGun</damageDef>
      <damageAmountBase>14</damageAmountBase>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_Gun_Tanya</defName>
    <label>tanya gun</label>
    <description>tanya's gun</description>
    <graphicData>
      <texPath>ra2/Things/Weapon/Allied/Soldier/TanyaGun</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <statBases>
      <Flammability>0</Flammability>
      <Mass>1</Mass>
      <AccuracyTouch>1.00</AccuracyTouch>
      <AccuracyShort>1.00</AccuracyShort>
      <AccuracyMedium>1.00</AccuracyMedium>
      <AccuracyLong>1.00</AccuracyLong>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
    <equippedStatOffsets>
      <ShootingAccuracyPawn>10.0</ShootingAccuracyPawn>
      <ShootingAccuracyTurret>10.0</ShootingAccuracyTurret>
    </equippedStatOffsets>
    <weaponTags>
      <li>TanyaGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>ra2_Bullet_Tanya</defaultProjectile>
        <ticksBetweenBurstShots>6</ticksBetweenBurstShots>
        <burstShotCount>1</burstShotCount>
        <accuracyTouch>2.00</accuracyTouch>
        <accuracyShort>2.00</accuracyShort>
        <accuracyMedium>2.00</accuracyMedium>
        <accuracyLong>2.00</accuracyLong>
        <warmupTime>0.1</warmupTime>
        <range>28</range>
        <soundCast>ra2_tanya_shot</soundCast>
        <forcedMissRadius>0.0</forcedMissRadius>
        <muzzleFlashScale>14</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>grip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>40</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>40</power>
        <cooldownTime>1.6</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <!--                   C - 4                                     -->
  <ThingDef ParentName="ra2_CanGetGunBase">
    <defName>ra2_TanyaC4Bomb</defName>
    <label>C4</label>
    <description>C4,break down everything.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>ra2/Things/Weapon/Allied/Soldier/ra2_C4</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Grenade</soundInteract>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <techLevel>Industrial</techLevel>
    <statBases>
      <Mass>1</Mass>
      <RangedWeapon_Cooldown>0.1</RangedWeapon_Cooldown>
    </statBases>
    <weaponTags>
      <li>TanyaGun2</li>
    </weaponTags>
    <thingCategories>
      <li>Grenades</li>
    </thingCategories>
    <verbs>
      <li>
        <label>place Cfour</label>
        <verbClass>Verb_LaunchProjectile</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <range>1</range>
        <forcedMissRadius>0.1</forcedMissRadius>
        <warmupTime>1.5</warmupTime>
        <noiseRadius>20</noiseRadius>
        <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
        <soundCast>Interact_Rifle</soundCast>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
        <defaultProjectile>Proj_C4Bomb</defaultProjectile>
        <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Explosive">
        <explosiveRadius>0.1</explosiveRadius>
        <explosiveDamageType>Bomb</explosiveDamageType>
        <requiredDamageTypeToExplode>Flame</requiredDamageTypeToExplode>
      </li>
    </comps>
  </ThingDef>
  <ThingDef ParentName="BaseGrenadeProjectile">
    <defName>Proj_C4Bomb</defName>
    <label>C4</label>
    <thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/Grenade</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <explosionRadius>0.1</explosionRadius>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>99999</damageAmountBase>
      <speed>200</speed>
      <!-- Use default damage from explosion def -->
      <explosionDelay>150</explosionDelay>
    </projectile>
  </ThingDef>
</Defs>